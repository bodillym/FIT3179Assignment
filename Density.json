{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/mubink51/FIT3179Assignment/main/final.csv"
  },
  "background": "#f5f3ed",
  "title": {"text": "Distrubtion of Income Facetted by Party", "fontSize": 30},
  
  "vconcat":[{"mark": {"type": "area", "interpolate": "cardinal"},
  "transform": [
    {"filter":"datum.Winning_Party == 'Republicans'"}
  ],
  
  "width": "container",
  "encoding": {
    "x": {
      "field": "AverageHouseholdIncome",
      "bin": true,
      "title": "Average Income $",
      "scale":{"domain":[60000,140000]}
      ,"axis":{"ticks":false, "labels":false, "title":" ","values":[60000,80000,100000,120000,135000], "grid": true}
    },
    "color": {
      "field": "Winning_Party",
      "scale": {"range": ["#e31212"]},
      "legend": null
    },
    "y": {"aggregate": "count", "title": "Number Of States","axis":{"grid":false}},
    "facet": {"field": "Winning_Party", "columns": 1, "title": ""}
    
  }},
  { 
  "mark": {"type": "area", "interpolate": "cardinal"},
  "transform": [
    {"filter":"datum.Winning_Party == 'Democrats'"}
  ],
  "width":  "container",
  "encoding": {
    "x": {
      "field": "AverageHouseholdIncome",
      "bin": true,
      "title": "Average Income $",
      "scale":{"domain":[60000,140000]},
      "axis":{"tickCount":7, "values":[60000,70000,80000,90000,100000,110000,120000,130000,135000], "grid": true}
    },
    "color": {
      "value":"#125be3"

    },
    "y": {"aggregate": "count", "title": "Number Of States","axis":{"grid":false}},
    "facet": {"field": "Winning_Party", "columns": 1, "title": ""}
  }}],
  
  "config": {
  "axis":{
      "labelFontSize":12,
      "titleFontSize":14
    },
    "axisX": {
      "minExtent": -5
    }
  }
}

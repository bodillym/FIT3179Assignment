{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 1000,
  "height": 800,
  "background": "#f5f3ed",
  "title": {
    "text": "US State Sub Regions",
    "fontSize": 40,
    "subtitle": "Regions are labelled on map",
    "subtitleFontSize": 30,
    "fontWeight": "bold"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/mubink51/FIT3179Hw2/main/ne_110m_admin_1_states_provinces%20(1).json",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_1_states_provinces"
    }
  },
  "projection": {"type": "albersUsa"},
  "layer": [
    {
      "selection": {
        "state_highlight": {
          "type": "multi",
          "fields": ["state"],
          "bind": "legend",
          "on": "mouseover"
        },
        "region_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend",
          "on": "mouseover"
        }
      },
      "mark": {"type": "geoshape", "stroke": "#f5f3ed"},
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/mubink51/FIT3179Hw2/main/final.csv"
            },
            "key": "state",
            "fields": [
              "state",
              "Specific_Region",
              "population",
              "Winning_Party",
              "Region"
            ]
          }
        }
      ],
      "encoding": {
        "color": {
          "condition": {
            "selection": "region_highlight",
            "field": "Specific_Region",
            "title": "Sub Region",
            "scale": {
              "range": [
                "#65b839",
                "#1255a6",
                "#faaf3e",
                "#355985",
                "#b51414",
                "#f05151",
                "#de3333",
                "#699651"
              ]
            }
          },
          "value": null
        },
        "opacity": {
          "condition": {"selection": "state_highlight", "value": 0.9},
          "value": 0.25
        },
        "tooltip": [
          {"field": "Region"},
          {"field": "Specific_Region", "title": "Sub Region"},
          {"field": "population", "format": ","},
          {"field": "Winning_Party", "title": "2016 Elected party"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "text": ["WEST"],
        "x": 205,
        "y": 370,
        "size": 30,
        "angle": 10,
        "color": "darkblue",
        "font": "lucida sans"
      }
    },
    {
      "mark": {
        "type": "text",
        "text": ["MID WEST"],
        "x": 585,
        "y": 330,
        "size": 30,
        "angle": 0,
        "color": "darkgreen",
        "font": "lucida sans"
      }
    },
    {
      "mark": {
        "type": "text",
        "text": ["SOUTH"],
        "x": 635,
        "y": 530,
        "size": 30,
        "angle": -12,
        "color": "darkred",
        "font": "lucida sans"
      }
    },
    {
      "mark": {
        "type": "text",
        "text": ["NORTH EAST"],
        "x": 890,
        "y": 245,
        "size": 29,
        "angle": -38,
        "color": "#b38b0b",
        "font": "lucida sans"
      }
    }
  ],
  "config": {
    "legend": {
      "labelFontSize": 11,
      "titleFontSize": 15,
      "titlePadding": 5,
      "orient": "none",
      "direction": "horizontal",
      "columns": 4,
      "legendX": 255,
      "legendY": 730
    },
    "style": {"cell": {"stroke": "transparent"}}
  }
}

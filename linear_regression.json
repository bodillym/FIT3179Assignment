{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "height": 400,
  "width": 600,
  "background": "#f5f3ed",
  "title": {
    "text": "Relationship between political leaning and",
    "fontSize": 26
  },
  "data": {
    "url": "https://raw.githubusercontent.com/mubink51/FIT3179Assignment/main/final.csv"
  },
  "params": [
    {
      "name": "y_axis_select",
      "bind": {
        "input": "select",
        "options": [
          "Adult_Obesity_100",
          "Poverty_Rate_100",
          "High_Min_Wage",
          "Prisoner_rate",
          "Non_white",
          "Unemployment"
        ],
        "name": "Select Variable:",
        "labels": [
          "Adult Obesity",
          "Povery Rate",
          "Minimum Wage",
          "Prisoner Count",
          "Diversity",
          "Unemployment"
        ]
      }
    }
  ],
  "transform": [
    {"calculate": "datum.MOV-0.5", "as": "juniper"},
    {"calculate": "datum.MOV2016", "as": "thingo"},
    {"calculate": "datum[y_axis_select]", "as": "y_variable"}
  ],
  "layer": [
    {
      "mark": {"type": "circle", "size": 70, "filled": true},
      "encoding": {
        "x": {
          "field": "juniper",
          "type": "quantitative",
          "title": "Republican Majority"
        },
        "y": {
          "field": "y_variable",
          "type": "quantitative",
          "title": "y_axis_select"
        },
        "tooltip": [
          {"field": "MOV"},
          {"field": "state"},
          {"field": "y_variable"}
        ]
      }
    },
    {
      "mark": {"type": "line", "color": "firebrick"},
      "transform": [{"regression": "y_variable", "on": "juniper"}],
      "encoding": {
        "x": {"field": "juniper", "type": "quantitative"},
        "y": {"field": "y_variable", "type": "quantitative"}
      }
    },
    {
      "transform": [
        {"regression": "y_variable", "on": "juniper", "params": true},
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "firebrick",
        "x": "width",
        "align": "right",
        "y": -5,
        "size": 15
      },
      "encoding": {"text": {"type": "nominal", "field": "R2"}}
    }
  ],
  "config": {
    "style": {"cell": {"stroke": "transparent"}}
  }
}
